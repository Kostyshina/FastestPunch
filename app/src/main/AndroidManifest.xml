<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="by.stylesoft.fastestpunch">

    <application
        android:name=".FastestPunch"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainSettingsActivity"
            android:theme="@style/MainSettingsTheme" />
        <activity
            android:name=".LicenseActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/NoTitleActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PunchButtonActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/NoTitleActionBarTheme"/>
    </application>

</manifest>