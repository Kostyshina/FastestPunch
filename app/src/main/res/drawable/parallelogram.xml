<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Colored rectangle-->
    <item
        android:right="100dp"
        android:left="0dp"
        android:top="0dp"
        android:bottom="50dp">
        <shape android:shape="rectangle">
            <size android:height="25dp" android:width="100dp"/>
            <solid android:color="@color/colorPrimaryLight" />
        </shape>
    </item>

    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:right="200dp"
        android:left="-50dp"
        android:top="-45dp"
        android:bottom="0dp">
        <rotate
            android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorDefaultBackground" />
            </shape>
        </rotate>
    </item>

