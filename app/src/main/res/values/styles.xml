<resources>

    <!--All themes-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorDefaultBackground</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="MainSettingsTheme" parent="AppTheme">
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:background">@color/colorDefaultBackground</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textSize">@dimen/main_settings_text_size</item>
    </style>

    <style name="LicenseTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/NoTitleActionBarStyle</item>
        <!--<item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>-->
    </style>
    
    <style name="RedButtonTheme" parent="@android:style/Widget.Button">
        <item name="android:color">@color/colorRedDark</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:typeface">normal</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

    <style name="MainSettingsItemTheme" parent="@android:style/Widget.Button.Toggle">
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitCenter</item>
<!--        <item name="android:textOn">?android:attr/text</item>
        <item name="android:textOff">?android:attr/text</item>-->
        <item name="android:background">@drawable/main_settings_item</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Styles for themes-->
    
    <style name="NoTitleActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome</item>
        <!--<item name="titleTextStyle">@style/NoTextStyle</item>-->
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <!--<style name="CopyrightActionBarStyle">
        <item name="displayOptions">useLogo|showHome|showCustom</item>
    </style>
    
    <style name="OverflowMenuActionBarStyle">

    </style>-->

    <style name="NoTextStyle">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
