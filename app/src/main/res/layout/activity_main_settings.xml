<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_settings"
    style="@style/MainSettingsTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">
    <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
    <!--app:behavior_hideable="true"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"-->
    <ImageButton
        android:id="@+id/menuTopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorDefaultBackground"
        android:contentDescription="@string/settings_description"
        android:src="@drawable/ic_menu_arrow_bottom" />

    <TableLayout
        android:id="@+id/imageTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menuTopButton"
        android:layout_centerHorizontal="true">

            <RadioGroup
                android:id="@+id/handsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/leftHandButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_left_hand_black"
                    android:text="@string/left_hand_item"
                    android:textOff="@string/left_hand_item"
                    android:textOn="@string/left_hand_item" />
                <!--android:background="@drawable/main_settings_item_check"-->
                <ToggleButton
                    android:id="@+id/rightHandButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"
                    android:checked="true"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_right_hand_black"
                    android:text="@string/right_hand_item"
                    android:textOff="@string/right_hand_item"
                    android:textOn="@string/right_hand_item" />
                <!--android:background="@drawable/main_settings_item_uncheck"-->
            </RadioGroup>


            <RadioGroup
                android:id="@+id/glovesGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/glovesOnButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_gloves_on_black"
                    android:text="@string/gloves_on_item"
                    android:textOff="@string/gloves_on_item"
                    android:textOn="@string/gloves_on_item" />
                <!--android:background="@drawable/main_settings_item_uncheck"-->

                <ToggleButton
                    android:id="@+id/glovesOffButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"
                    android:checked="true"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_gloves_off_black"
                    android:text="@string/gloves_off_item"
                    android:textOff="@string/gloves_off_item"
                    android:textOn="@string/gloves_off_item" />
                <!--android:background="@drawable/main_settings_item_check"-->
            </RadioGroup>

            <RadioGroup
                android:id="@+id/movesGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ToggleButton
                    android:id="@+id/punchOnStepButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"

                    android:layout_marginEnd="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_punch_on_step_black"
                    android:text="@string/punch_on_step_item"
                    android:textOff="@string/punch_on_step_item"
                    android:textOn="@string/punch_on_step_item" />
                <!--android:background="@drawable/main_settings_item_check"-->

                <ToggleButton
                    android:id="@+id/punchWithSpaceButton"
                    style="@style/MainSettingsItemTheme"
                    android:layout_width="@dimen/main_settings_item_size"
                    android:layout_height="@dimen/main_settings_item_size"
                    android:checked="true"
                    android:layout_marginBottom="@dimen/normal_margin"
                    android:drawableTop="@drawable/ic_punch_with_space_black"
                    android:text="@string/punch_with_space_item"
                    android:textOff="@string/punch_with_space_item"
                    android:textOn="@string/punch_with_space_item" />
                <!--android:background="@drawable/main_settings_item_uncheck"-->
            </RadioGroup>
    </TableLayout>

    <LinearLayout
        android:id="@+id/punchTypeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glovesWeightForm"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/punch_type_text" />

        <Spinner
            android:id="@+id/punchTypeSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/glovesWeightForm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/imageTable"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:visibility="gone">
        <!--android:visibility="invisible"-->

        <TextView
            android:id="@+id/glovesWeightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/gloves_weight_text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/glovesWeight"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:cursorVisible="false"
            android:inputType="number"
            android:labelFor="@+id/glovesWeightText"
            android:textAlignment="center"
            android:textSize="14sp"
            android:typeface="normal"
            tools:ignore="LabelFor">
            <!--<requestFocus />-->
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/gloves_weight_unit" />
    </LinearLayout>

</RelativeLayout>
