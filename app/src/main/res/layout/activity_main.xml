    <!--main content layout-->
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
    <!--xmlns:tools="http://schemas.android.com/tools"-->

        <LinearLayout
            android:id="@+id/allSettings"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/punchTypeView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/fourth_margin"
                android:gravity="center"
                android:layout_weight="3"
                android:background="@drawable/parameters_background" />
            <LinearLayout
                android:id="@+id/parametersLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="5"
                android:orientation="horizontal"
                android:background="@drawable/parameters_background"
                android:gravity="center">
                <TextView
                    android:id="@+id/handView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="@dimen/fourth_margin"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:drawableTop="@drawable/ic_right_hand_black" />
                <TextView
                    android:id="@+id/glovesView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginTop="@dimen/fourth_margin"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:textSize="14sp"
                    android:gravity="center|bottom"
                    android:text=""
                    android:textAlignment="gravity"
                    android:drawableTop="@drawable/ic_gloves_off_black" />
                <TextView
                    android:id="@+id/movesView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginTop="@dimen/fourth_margin"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:drawableTop="@drawable/ic_punch_with_space_black" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/mainSettingsButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/fourth_margin"
                android:layout_weight="1.5"
                android:background="@drawable/button_background"
                android:contentDescription="@string/settings_description"
                android:padding="4dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_settings_black_24dp" />
            <!--android:adjustViewBounds="true"-->

        </LinearLayout>

        <Button
            android:id="@+id/punchButton"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_below="@+id/allSettings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/punch_button"
            android:text="@string/punch_button"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/punch_button_text_size"
            android:textStyle="bold"
            android:typeface="normal" />
        <!--android:gravity="center_vertical|center_horizontal"-->

        <LinearLayout
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/communityButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:background="@drawable/button_background"
                android:text="@string/community"
                android:typeface="normal" />

            <Button
                android:id="@+id/historyButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:text="@string/history"
                android:typeface="normal" />
        </LinearLayout>

    </RelativeLayout>

    <!--bottom sheet layout-->
